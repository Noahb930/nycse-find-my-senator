
<center>
  <header>
<h1><%= @senator.name%> <%= @senator.party%> - <%= @senator.district%></h1>
</header>
<div class="card text-center center border_orange" id="senator_card">
  <div class="card-header border_orange">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="tab-1" href="#">Overview</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/senators/<%= @senator.id%>/votes">Voting Record</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/senators/<%= @senator.id%>/donations">Campaign Finances</a>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <img align="left" src="<%= @senator.img %>" ></img>
    <div>
    <h3>NYCSE Rating: <%= @senator.rating%></h2>
    <h4>Beliefs Regarding Gun Control:</h4>
    <% unless @senator.beliefs.blank? %>
    <% beliefs = @senator.beliefs.split("-").drop(1) %>
<ul>

  <% beliefs.each do |belief| %>
  <li><%= belief%></li>
  <% end %>

</ul>
    <% end %>

    </div>


  </div>

</center>
