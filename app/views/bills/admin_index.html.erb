<% Bill.all.each do |bill| %>
<div class = "card bill">
  <div class="card-header">NY State Senate Bill <%= bill.number %></div>
  <div class="card-body">
    <p><strong>Status: </strong><%= bill.status %></p>
    <p><strong>Summary: </strong> <%= bill.summary %> </p>
    <%= link_to "View", bill , class: "btn btn-primary btn-block" %>
    <%= link_to "Edit", bill , class: "btn btn-secondary btn-block" %>
    <%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-block btn-danger" %>

  </div>
</div>
<% end %>
